---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Brooks Geospatial - Professional Mapping & Spatial Data" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&family=Space+Grotesk:wght@500;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="bg-slate-950 text-white font-sans antialiased selection:bg-lime-500 selection:text-slate-900">
		<slot />
	</body>
</html>

<style is:global>
    /* Professional Tech Font Settings */
    h1, h2, h3, h4 { font-family: 'Space Grotesk', sans-serif; }
    body { font-family: 'Inter', sans-serif; }
</style>