---
// No special imports needed
---

<nav
    class="fixed w-full z-50 top-0 bg-slate-950/90 backdrop-blur-md border-b border-white/10"
>
    <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
        <a href="/" class="flex items-center gap-3">
            <img
                src="/logo2.png"
                alt="Brooks Geospatial"
                class="h-10 md:h-12 w-auto rounded-lg"
            />
        </a>

        <div
            class="hidden md:flex space-x-8 text-sm font-medium text-slate-300"
        >
            <a href="/" class="hover:text-teal-400 transition">Home</a>
            <a href="/#services" class="hover:text-teal-400 transition"
                >Services</a
            >
            <a href="/portfolio" class="hover:text-teal-400 transition"
                >Portfolio</a
            >
            <a href="/about" class="hover:text-teal-400 transition">About</a>
            <a href="/contact" class="hover:text-teal-400 transition">Contact</a
            >
        </div>

        <a
            href="/contact"
            class="hidden md:block bg-teal-500 text-white px-6 py-2.5 rounded font-semibold text-sm hover:bg-teal-400 transition shadow-[0_0_20px_rgba(20,184,166,0.3)]"
        >
            Get in Touch
        </a>

        <button
            id="mobile-menu-btn"
            class="md:hidden text-white focus:outline-none"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-8 w-8"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
        </button>
    </div>

    <div
        id="mobile-menu"
        class="hidden md:hidden bg-slate-900 border-b border-white/10"
    >
        <div class="flex flex-col px-6 py-4 space-y-4 text-center">
            <a
                href="/"
                class="text-slate-300 hover:text-teal-400 text-lg py-2 border-b border-white/5"
                >Home</a
            >
            <a
                href="/#services"
                class="text-slate-300 hover:text-teal-400 text-lg py-2 border-b border-white/5"
                >Services</a
            >
            <a
                href="/portfolio"
                class="text-slate-300 hover:text-teal-400 text-lg py-2 border-b border-white/5"
                >Portfolio</a
            >
            <a
                href="/about"
                class="text-slate-300 hover:text-teal-400 text-lg py-2 border-b border-white/5"
                >About</a
            >
            <a
                href="/contact"
                class="text-slate-300 hover:text-teal-400 text-lg py-2"
                >Contact</a
            >
        </div>
    </div>
</nav>

<script>
    const btn = document.getElementById("mobile-menu-btn");
    const menu = document.getElementById("mobile-menu");

    if (btn && menu) {
        btn.addEventListener("click", () => {
            menu.classList.toggle("hidden");
        });
    }
</script>
