---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
---

<Layout title="Brooks Geospatial | Elevating Perspectives">
    
<Navbar />

    <section class="relative h-screen flex items-center justify-center overflow-hidden bg-slate-900">
        
        <div class="absolute inset-0 z-0">
            <video 
                class="w-full h-full object-cover opacity-60" 
                autoplay muted loop playsinline
            >
                <source src="/hero-background.webm" type="video/webm">
            </video>
            <div class="absolute inset-0 bg-gradient-to-t from-slate-950 via-slate-900/60 to-slate-900/40"></div>
        </div>

        <div class="relative z-10 text-center max-w-5xl px-6 mt-10">
            <h1 class="text-5xl md:text-7xl font-bold leading-tight mb-6 text-white tracking-tight">
                Elevating <br/>
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-teal-400 to-cyan-500">Perspectives</span>
            </h1>
            <p class="text-xl text-slate-200 mb-10 max-w-2xl mx-auto font-normal leading-relaxed">
                Aerial Imagery for Utilities, Construction, and Beyond.
            </p>
            <div class="flex flex-col md:flex-row gap-4 justify-center">
                <a href="/contact" class="bg-teal-500 text-white px-8 py-4 rounded font-bold hover:bg-teal-400 transition shadow-lg shadow-teal-900/20">
                    Get in Touch
                </a>
                <a href="#services" class="bg-slate-800/50 backdrop-blur-sm border border-teal-500/30 text-white px-8 py-4 rounded font-bold hover:bg-slate-800 hover:border-teal-400 transition">
                    View Services
                </a>
            </div>
        </div>
    </section>

    <section id="services" class="py-24 bg-slate-950 relative">
        <div class="max-w-7xl mx-auto px-6">
            <div class="mb-16 text-center max-w-3xl mx-auto">
                <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Our Services</h2>
                <div class="w-20 h-1 bg-teal-500 mx-auto rounded-full"></div>
            </div>

            <div class="grid md:grid-cols-3 gap-8">
                <div class="group bg-slate-900 rounded-xl overflow-hidden border border-slate-800 hover:border-teal-500/50 hover:shadow-[0_0_30px_rgba(20,184,166,0.1)] transition duration-300">
                    <div class="h-56 overflow-hidden relative">
                        <img src="/service-gis.jpg" alt="GIS Mapping" class="w-full h-full object-cover transition duration-700 group-hover:scale-105 opacity-90 group-hover:opacity-100" />
                        <div class="absolute inset-0 bg-gradient-to-t from-slate-900 to-transparent opacity-80"></div>
                        <div class="absolute bottom-4 left-4 w-12 h-12 bg-teal-500/90 backdrop-blur-sm rounded-lg flex items-center justify-center text-white shadow-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="1 6 1 22 8 18 16 22 23 18 23 2 16 6 8 2 1 6"/><line x1="8" y1="2" x2="8" y2="18"/><line x1="16" y1="6" x2="16" y2="22"/></svg>
                        </div>
                    </div>
                    <div class="p-8">
                        <h3 class="text-xl font-bold mb-3 text-white">GIS & Mapping</h3>
                        <p class="text-slate-400 leading-relaxed mb-4">
                            Site surveys, progress tracking, and 3D modeling. Turning physical sites into digital assets.
                        </p>
                    </div>
                </div>

                <div class="group bg-slate-900 rounded-xl overflow-hidden border border-slate-800 hover:border-teal-500/50 hover:shadow-[0_0_30px_rgba(20,184,166,0.1)] transition duration-300">
                    <div class="h-56 overflow-hidden relative">
                        <img src="/service-aerial.jpg" alt="Drone Photography" class="w-full h-full object-cover transition duration-700 group-hover:scale-105 opacity-90 group-hover:opacity-100" />
                        <div class="absolute inset-0 bg-gradient-to-t from-slate-900 to-transparent opacity-80"></div>
                        <div class="absolute bottom-4 left-4 w-12 h-12 bg-teal-500/90 backdrop-blur-sm rounded-lg flex items-center justify-center text-white shadow-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"/><circle cx="12" cy="13" r="4"/></svg>
                        </div>
                    </div>
                    <div class="p-8">
                        <h3 class="text-xl font-bold mb-3 text-white">Aerial Imagery</h3>
                        <p class="text-slate-400 leading-relaxed mb-4">
                            High-resolution photography & videography for real estate marketing, events, and promotion.
                        </p>
                    </div>
                </div>

                <div class="group bg-slate-900 rounded-xl overflow-hidden border border-slate-800 hover:border-teal-500/50 hover:shadow-[0_0_30px_rgba(20,184,166,0.1)] transition duration-300">
                    <div class="h-56 overflow-hidden relative">
                        <img src="/service-utility.jpg" alt="Utility Inspection" class="w-full h-full object-cover transition duration-700 group-hover:scale-105 opacity-90 group-hover:opacity-100" />
                        <div class="absolute inset-0 bg-gradient-to-t from-slate-900 to-transparent opacity-80"></div>
                        <div class="absolute bottom-4 left-4 w-12 h-12 bg-teal-500/90 backdrop-blur-sm rounded-lg flex items-center justify-center text-white shadow-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/></svg>
                        </div>
                    </div>
                    <div class="p-8">
                        <h3 class="text-xl font-bold mb-3 text-white">Utility Contracts</h3>
                        <p class="text-slate-400 leading-relaxed mb-4">
                            Detailed inspections, asset mapping, and vegetation management for utility infrastructure.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="contact" class="py-24 bg-slate-900 border-t border-slate-800">
        <div class="max-w-4xl mx-auto px-6 text-center">
            <h2 class="text-3xl font-bold mb-8 text-white">Ready to get started?</h2>
            <p class="text-slate-400 mb-10 text-lg leading-relaxed max-w-2xl mx-auto">
                We deliver the data you need with precision and speed.
            </p>
            
            <div class="inline-flex flex-col md:flex-row items-center gap-6 bg-slate-800/50 p-8 rounded-2xl border border-white/5">
                <div class="text-left">
                    <p class="text-sm text-teal-400 uppercase tracking-wider font-bold mb-1">Email Us</p>
                    <a href="mailto:info@brooksgeospatial.com" class="text-xl md:text-2xl font-bold text-white hover:text-teal-400 transition">
                        mac@brooksgeospatial.com
                    </a>
                </div>
                <div class="hidden md:block w-px h-12 bg-white/10"></div>
                <div class="text-left">
                    <p class="text-sm text-teal-400 uppercase tracking-wider font-bold mb-1">Follow Us</p>
                    <div class="flex gap-4">
                        <a href="#" class="text-white hover:text-teal-400 transition font-semibold">LinkedIn</a>
                        <a href="#" class="text-white hover:text-teal-400 transition font-semibold">Instagram</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="py-12 bg-slate-950 border-t border-slate-800 text-center">
        <div class="flex justify-center mb-4">
             <img src="/logo2.png" alt="Brooks Geospatial" class="h-8 w-auto opacity-50 grayscale hover:grayscale-0 hover:opacity-100 transition duration-500" />
        </div>
        <p class="text-slate-600 text-sm">&copy; 2025 Brooks Geospatial. All rights reserved.</p>
    </footer>

</Layout>