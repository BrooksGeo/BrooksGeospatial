---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
---

<Layout title="Portfolio | Brooks Geospatial">
    <Navbar />

    <section class="relative pt-32 pb-20 px-6 bg-slate-950">
        <div class="max-w-7xl mx-auto text-center">
            <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
                Our <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-teal-400 to-cyan-500"
                    >Portfolio</span
                >
            </h1>
            <p class="text-lg text-slate-400 max-w-2xl mx-auto leading-relaxed">
                Explore our latest projects in aerial imagery, GIS mapping, and
                utility inspections.
            </p>
        </div>
    </section>

    <section class="py-12 bg-slate-900 min-h-[50vh]">
        <div class="max-w-7xl mx-auto px-6">
            <!-- Category Filter (Optional Future Feature) -->
            <!-- <div class="flex justify-center gap-4 mb-12"> ... </div> -->

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Placeholder items for user to populate -->
                <div
                    class="group relative overflow-hidden rounded-xl bg-slate-800 aspect-video flex items-center justify-center border border-slate-700 hover:border-teal-500/50 transition"
                >
                    <p class="text-slate-500 font-medium">Project Image 1</p>
                    <!-- <img src="/project1.jpg" alt="Project 1" class="absolute inset-0 w-full h-full object-cover transition duration-500 group-hover:scale-105" /> -->
                </div>

                <div
                    class="group relative overflow-hidden rounded-xl bg-slate-800 aspect-video flex items-center justify-center border border-slate-700 hover:border-teal-500/50 transition"
                >
                    <p class="text-slate-500 font-medium">Project Image 2</p>
                </div>

                <div
                    class="group relative overflow-hidden rounded-xl bg-slate-800 aspect-video flex items-center justify-center border border-slate-700 hover:border-teal-500/50 transition"
                >
                    <p class="text-slate-500 font-medium">Project Image 3</p>
                </div>

                <div
                    class="group relative overflow-hidden rounded-xl bg-slate-800 aspect-video flex items-center justify-center border border-slate-700 hover:border-teal-500/50 transition"
                >
                    <p class="text-slate-500 font-medium">Project Image 4</p>
                </div>

                <div
                    class="group relative overflow-hidden rounded-xl bg-slate-800 aspect-video flex items-center justify-center border border-slate-700 hover:border-teal-500/50 transition"
                >
                    <p class="text-slate-500 font-medium">Project Image 5</p>
                </div>

                <div
                    class="group relative overflow-hidden rounded-xl bg-slate-800 aspect-video flex items-center justify-center border border-slate-700 hover:border-teal-500/50 transition"
                >
                    <p class="text-slate-500 font-medium">Project Image 6</p>
                </div>
            </div>

            <div class="mt-16 text-center">
                <p class="text-slate-500 italic">
                    More projects coming soon...
                </p>
            </div>
        </div>
    </section>

    <footer class="py-12 bg-slate-950 border-t border-slate-800 text-center">
        <div class="flex justify-center mb-4">
            <img
                src="/logo2.png"
                alt="Brooks Geospatial"
                class="h-8 w-auto opacity-50 grayscale hover:grayscale-0 hover:opacity-100 transition duration-500"
            />
        </div>
        <p class="text-slate-600 text-sm">
            &copy; 2025 Brooks Geospatial. All rights reserved.
        </p>
    </footer>
</Layout>
