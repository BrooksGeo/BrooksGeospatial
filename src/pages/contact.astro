---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact | Brooks Geospatial">
    
    <nav class="fixed w-full z-50 top-0 bg-slate-950/90 backdrop-blur-md border-b border-white/10">
        <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
            
            <a href="/" class="flex items-center gap-3">
                <img src="/logo2.png" alt="Brooks Geospatial" class="h-12 w-auto rounded-lg" />
            </a>

            <div class="hidden md:flex space-x-8 text-sm font-medium text-slate-300">
                <a href="/" class="hover:text-teal-400 transition">Home</a>
                <a href="/#services" class="hover:text-teal-400 transition">Services</a>
                <a href="/about" class="hover:text-teal-400 transition">About</a>
                <a href="/contact" class="text-teal-400 font-bold border-b border-teal-400 pb-1">Contact</a>
            </div>

            <a href="/contact" class="bg-teal-500 text-white px-6 py-2.5 rounded font-semibold text-sm hover:bg-teal-400 transition shadow-[0_0_20px_rgba(20,184,166,0.3)]">
                Get in Touch
            </a>
        </div>
    </nav>

    <section class="relative pt-40 pb-20 bg-slate-900 overflow-hidden">
        <div class="absolute inset-0 z-0">
             <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10"></div>
             <div class="absolute inset-0 bg-gradient-to-b from-slate-950 via-transparent to-slate-950"></div>
        </div>
        
        <div class="relative z-10 max-w-4xl mx-auto px-6 text-center">
            <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white tracking-tight">
                Let's Start a <span class="text-teal-400">Conversation</span>
            </h1>
            <p class="text-xl text-slate-400 max-w-2xl mx-auto font-light">
                Ready to map your next project? Reach out for a quote or consultation.
            </p>
        </div>
    </section>

    <section class="pb-24 bg-slate-950 relative">
        <div class="max-w-6xl mx-auto px-6">
            
            <div class="grid md:grid-cols-2 gap-12 bg-slate-900/50 p-8 md:p-12 rounded-2xl border border-white/10">
                
                <div>
                    <h2 class="text-2xl font-bold text-white mb-6">Send a Message</h2>
                    
                    <form name="contact" method="POST" data-netlify="true" class="space-y-6">
                        
                        <div>
                            <label for="name" class="block text-sm font-medium text-slate-400 mb-2">Name</label>
                            <input type="text" name="name" id="name" required 
                                class="w-full bg-slate-950 border border-slate-800 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-teal-500 focus:ring-1 focus:ring-teal-500 transition"
                                placeholder="Your Full Name" />
                        </div>

                        <div>
                            <label for="email" class="block text-sm font-medium text-slate-400 mb-2">Email</label>
                            <input type="email" name="email" id="email" required 
                                class="w-full bg-slate-950 border border-slate-800 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-teal-500 focus:ring-1 focus:ring-teal-500 transition"
                                placeholder="name@company.com" />
                        </div>

                        <div>
                            <label for="message" class="block text-sm font-medium text-slate-400 mb-2">Message</label>
                            <textarea name="message" id="message" rows="4" required
                                class="w-full bg-slate-950 border border-slate-800 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-teal-500 focus:ring-1 focus:ring-teal-500 transition"
                                placeholder="Tell us about your project needs..."></textarea>
                        </div>

                        <button type="submit" class="w-full bg-teal-500 text-white font-bold py-4 rounded-lg hover:bg-teal-400 transition shadow-lg hover:shadow-teal-500/20">
                            Send Message
                        </button>
                    </form>
                </div>

                <div class="flex flex-col justify-center space-y-10 border-t md:border-t-0 md:border-l border-white/10 pt-10 md:pt-0 md:pl-12">
                    
                    <div>
                        <div class="w-12 h-12 bg-teal-500/10 rounded-lg flex items-center justify-center text-teal-400 mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
                        </div>
                        <h3 class="text-lg font-bold text-white mb-2">Email Us</h3>
                        <p class="text-slate-400 mb-2">For general inquiries and quotes:</p>
                        <a href="mailto:mac@brooksgeospatial.com" class="text-xl text-teal-400 font-semibold hover:text-white transition">
                            mac@brooksgeospatial.com
                        </a>
                    </div>

                    <div>
                        <div class="w-12 h-12 bg-teal-500/10 rounded-lg flex items-center justify-center text-teal-400 mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
                        </div>
                        <h3 class="text-lg font-bold text-white mb-2">Call Us</h3>
                        <p class="text-slate-400 mb-2">Mon-Fri, 9am - 5pm CST</p>
                        <a href="tel:1234567890" class="text-xl text-teal-400 font-semibold hover:text-white transition">
                            (123) 456-7890
                        </a>
                    </div>

                    <div>
                        <h3 class="text-lg font-bold text-white mb-4">Connect</h3>
                        <div class="flex gap-4">
                            <a href="#" class="w-10 h-10 rounded-full bg-slate-800 flex items-center justify-center text-white hover:bg-teal-500 transition">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
                            </a>
                            <a href="#" class="w-10 h-10 rounded-full bg-slate-800 flex items-center justify-center text-white hover:bg-teal-500 transition">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <footer class="py-12 bg-slate-950 border-t border-slate-800 text-center">
        <div class="flex justify-center mb-4">
             <img src="/logo2.png" alt="Brooks Geospatial" class="h-8 w-auto opacity-50 grayscale hover:grayscale-0 hover:opacity-100 transition duration-500" />
        </div>
        <p class="text-slate-600 text-sm">&copy; 2025 Brooks Geospatial. All rights reserved.</p>
    </footer>

</Layout>